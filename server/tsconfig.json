{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,             // เพิ่มสำหรับรองรับการ import แบบ default (สำคัญ)
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true, // ตั้งให้รักษาชื่อไฟล์ที่เข้ากันได้
    "noFallthroughCasesInSwitch": true,      // ป้องกัน case ที่ไม่ได้ handle
    "moduleResolution": "node",             // ตรวจสอบว่าตั้งค่า moduleResolution ถูกต้อง
    "types": ["node"],    // เพิ่ม type declarations
    "typeRoots": ["node_modules/@types", "./types"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]                // รวมเฉพาะไฟล์ใน src
}




